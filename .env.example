# Claude Code API Configuration
# Copy this file to .env and fill in your values

# API Keys for authenticating to this API (JSON array format)
# Generate with: uuidgen
CLAUDE_API_API_KEYS=["your-api-key-here"]

# Claude defaults
CLAUDE_API_DEFAULT_MODEL=claude-sonnet-4-5-20250929
CLAUDE_API_DEFAULT_MAX_TURNS=20
CLAUDE_API_DEFAULT_TIMEOUT=300
CLAUDE_API_DEFAULT_PERMISSION_MODE=acceptEdits

# Paths (JSON array format for ALLOWED_DIRECTORIES)
CLAUDE_API_ALLOWED_DIRECTORIES=["/workspace"]
CLAUDE_API_DEFAULT_WORKING_DIRECTORY=/workspace

# Session cache
CLAUDE_API_SESSION_CACHE_MAXSIZE=1000
CLAUDE_API_SESSION_CACHE_TTL=3600

# Session persistence (survives container restarts)
CLAUDE_API_SESSION_PERSISTENCE_PATH=/home/appuser/data/sessions.json

# Logging
CLAUDE_API_LOG_LEVEL=INFO
